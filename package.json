{
  "name": "pokedex",
  "version": "1.0.0",
  "description": "A REST API for a Pokedex",
  "main": "./dist/index.js",
  "scripts": {
    "lint": "eslint --ext js,ts src/ test/",
    "check-formatting": "prettier '**/*.ts' --list-different",
    "check-ts-types": "tsc --noEmit",
    "fix-formatting-all": "prettier '**/*.ts' --write",
    "fix-formatting": "prettier $(git status --porcelain | sed 's/^...//' | grep -E '\\.ts$') --write",
    "clean": "rm -rf ./dist",
    "copy-non-ts-files": "rsync -a --exclude='*.ts' --prune-empty-dirs src/ dist/",
    "build": "npm run clean && npm run copy-non-ts-files && tsc --project tsconfig-build.json && npm run write-version-file",
    "build-watch": "nodemon --ext '*' --watch src/ --exec 'npm run build'",
    "build-tsc-watch": "tsc-watch --noClear --project tsconfig-build.json",
    "write-version-file": "echo \\\"$(git rev-parse --short HEAD)\\\" > ./dist/version.json",
    "test": "npm run test:unit",
    "test:unit": "mocha --config test/unit/.mocharc.json",
    "start": "node dist/index.js",
    "start-ts": "ts-node src/index.ts",
    "start-watch": "nodemon --legacy-watch --watch src --exec 'ts-node' src/index.ts"
  },
  "author": "Thom Wright",
  "license": "MIT",
  "engines": {
    "node": ">=14.15"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint",
      "pre-push": "npm-run-all --aggregate-output --parallel lint test:unit build"
    }
  },
  "dependencies": {
    "express": "^4.17.1",
    "got": "^11.8.2"
  },
  "devDependencies": {
    "@types/chai": "^4.2.22",
    "@types/express": "^4.17.13",
    "@types/mocha": "^9.0.0",
    "@types/node": "^14.17.27",
    "@typescript-eslint/eslint-plugin": "^5.1.0",
    "@typescript-eslint/parser": "^5.1.0",
    "chai": "^4.3.4",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-mocha-no-only": "^1.1.1",
    "eslint-plugin-no-only-tests": "^2.6.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^4.3.8",
    "mocha": "^9.1.3",
    "nodemon": "^2.0.14",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.4.1",
    "ts-node": "^10.3.0",
    "tsc-watch": "^4.5.0",
    "typescript": "^4.4.4"
  }
}
